### Apache
# Apache external Port - used for connection via browser (e.g. http://localhost:8181)
APACHE_HTTP_PORT=8181

### PHP
# PHP OPCache timestamps validation
# This should be turned off for production instances
PHP_OPCACHE_VALIDATE_TIMESTAMPS=1

### PostgreSQL
# Host & Container name
DB_HOST=pdb
# Version
DB_VERS=13
# Database name
DB_NAME=app
# Database username
DB_USER=psql
# Database password
DB_PASS=pass
# Internal Port - used for internal connectins within Docker container
DB_PORT=5432
# External Port - used for connection with your Database Explorer
DB_EXT_PORT=15432

### RabbitMQ
# Host & Container name
RQ_HOST=rabbitmq
# Version
RQ_VERS=3-management
# Erlang cookie value
RQ_COOKIE=123456789
# Username
RQ_USER=guest
# Password
RQ_PASS=guest
# External UI Port - used for connection to management app via browser (e.g. http://localhost:15672)
RQ_HTTP_PORT=15672
# AMPQ Port 
RQ_AMQP_PORT=5672

### MailHog
# Host & Container name
MH_HOST=mailhog
# External Port - used for connection to management app via browser (e.g. http://localhost:8025)
MH_HTTP_PORT=8025
# SMTP Port - used for internal connectins within Docker container for sending mail
MH_SMTP_PORT=1025
